<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD05B"
    android:backgroundTint="#F1AF49"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="216dp"
        android:layout_height="204dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sms" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginTop="136dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/_56332"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="212dp"
        android:fontFamily="monospace"
        android:onClick="pushed"
        android:text="@string/txt_button"
        android:textColor="#FFFFFF"

        android:textStyle="bold"
        android:typeface="normal"
        app:icon="@drawable/ic_baseline_send"
        app:iconPadding="@dimen/cardview_compat_inset_shadow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ipAddress"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginTop="64dp"
        android:drawableStart="@drawable/ic_phone_24"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="@string/txt_phone_number"
        android:hyphenationFrequency="none"
        android:inputType="phone"
        android:minLines="6"
        android:textAlignment="center"
        android:textColor="#324a5e"
        android:textColorHint="#324a5e"
        android:textSize="20sp"

        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TableLayout
        android:layout_width="265dp"
        android:layout_height="54dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="@string/latitud_txt"
                android:textColor="#6d0c10"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLatitude"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textAlignment="textEnd"
                android:textColor="#6d0c10"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="@string/longitud_txt"
                android:textColor="#6d0c10"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLongitude"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textAlignment="textEnd"
                android:textColor="#6d0c10"
                android:textSize="16sp" />
        </TableRow>

    </TableLayout>

    <Switch
        android:id="@+id/switch_activity"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:drawableStart="@drawable/ic_baseline_mail"
        android:fontFamily="monospace"
        android:onClick="Switch"
        android:text="@string/switch1_txt"
        android:textAlignment="center"
        android:textColor="#324a5e"
        android:textColorHint="#324a5e"

        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="831dp" />


</androidx.constraintlayout.widget.ConstraintLayout>