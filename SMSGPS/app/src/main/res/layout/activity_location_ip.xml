<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFD05B"
    android:backgroundTint="#F1AF49"
    tools:context=".LocationIP">

    <EditText
        android:id="@+id/portNumber"
        android:layout_width="202dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        android:drawableStart="@drawable/ic_baseline_door"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="@string/puerto_txt"
        android:hyphenationFrequency="none"
        android:inputType="phone"
        android:minLines="6"
        android:textAlignment="center"
        android:textColor="#324a5e"
        android:textColorHint="#324a5e"

        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ipAddress" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="216dp"
        android:layout_height="204dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sms" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginTop="136dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:srcCompat="@drawable/_56332"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="monospace"
        android:onClick="pushed1"
        android:text="@string/txt_button"

        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:typeface="normal"
        app:icon="@drawable/ic_baseline_send"
        app:iconPadding="@dimen/cardview_compat_inset_shadow"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintVertical_bias="0.116" />

    <EditText
        android:id="@+id/ipAddress"
        android:layout_width="290dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/ic_baseline_place"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="@string/txt_ipadress"
        android:hyphenationFrequency="none"
        android:inputType="phone"
        android:minLines="6"
        android:textAlignment="center"
        android:textColor="#324a5e"

        android:textColorHint="#324a5e"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="265dp"
        android:layout_height="54dp"
        android:layout_marginBottom="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="monospace"
                android:text="@string/latitud_txt"
                android:textColor="#6d0c10"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLatitude"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textAlignment="textEnd"
                android:textColor="#6d0c10"
                android:textSize="16sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="@string/longitud_txt"
                android:textColor="#6d0c10"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvLongitude"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:textAlignment="textEnd"
                android:textColor="#6d0c10"
                android:textSize="16sp" />
        </TableRow>

    </TableLayout>

    <Switch
        android:id="@+id/switch_activity"
        android:layout_width="114dp"
        android:layout_height="56dp"
        android:layout_marginBottom="12dp"
        android:checked="true"
        android:drawableStart="@drawable/ic_baseline_public"
        android:fontFamily="monospace"
        android:onClick="Switch"
        android:text="@string/switch2_txt"
        android:textAlignment="center"
        android:textColor="#324a5e"
        android:textColorHint="#324a5e"

        android:textOff="@string/switch1_txt"
        android:textOn="@string/switch2_txt"
        android:textSize="21sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="100dp"
        android:layout_height="93dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/portNumber">

        <RadioButton
            android:id="@+id/tcp_rbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:fontFamily="monospace"
            android:text="@string/TCP_txt"
            android:textColor="#324a5e"
            android:textColorHint="#324a5e"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/udp_rbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="@string/UDP_txt"
            android:textColor="#324a5e"
            android:textColorHint="#324a5e"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>